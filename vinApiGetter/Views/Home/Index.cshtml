<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS, and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
<div class="row">
    <div class="col-xs-12">
        <div class="input-group">
            <span class="input-group-btn" ng-click="getVinData()">
                <button class="btn btn-secondary" type="button" ng-click="showTable=true">Search</button>
            </span>
            <input type="text" ng-model="yearNum" class="form-control" placeholder="Year" />
            <input type="text" ng-model="vinNum" class="form-control" placeholder="Vin" />
        </div>
    </div>
</div>
<br />
<div class="row tableView animate-show-hide" ng-show="showTable">
    <div class="col-xs-12">
        <table class="table table-bordered table-condensed table-striped">
            <tr>
                <th>parameter</th>
                <th>value</th>
                <th>options</th>
            </tr>
            <tr ng-repeat="d in vehicle" class="text-center">
                <td>{{d.Variable}}</td>
                <td>{{d.Value}}</td>
                <td>
                    <button id="remove{{$index}}" class="btn btn-danger" ng-model="checkbox" ng-click="removeRow($index)" type="button">Remove</button>
                    <button id="edit{{$index}}" class="btn btn-primary" ng-model="editButton" ng-click="editRow($index)" type="button" data-toggle="modal" data-target="#editModal">Edit</button>
                </td>
            </tr>
        </table>
    </div>

    <br />

    <div class="input-group">
        <span class="input-group-btn" ng-click="addRow()">
            <button class="btn btn-secondary" type="button">Add</button>
        </span>
        <input type="text" ng-model="param" class="form-control" placeholder="param" />
        <input type="text" ng-model="val" class="form-control" placeholder="val" />
    </div>

    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="input-group">
                        <input type="text" ng-value="valHolder" ng-model="newVal" />
                        <input type="text" ng-value="paramHolder" ng-model="newParam" />

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" ng-click="saveChanges(recordNum)">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-xs-12">
            <label for="files">Select Images</label>
            <input id="files" type="file" multiple="multiple" />
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <output id="result"></output>
        </div>
    </div>
</div>

